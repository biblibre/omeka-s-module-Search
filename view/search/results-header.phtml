<?php
/**
 * @var \Laminas\View\Renderer\PhpRenderer $this
 * @var array $sortOptions
 * @var \Search\Query $query
 */
?>
<div class="search-results-header">
    <?php if($showSearchSummary) : ?>
        <div class="search-results__search-summary">
            <span class="search-results__search-summary__header">
                <?php if (!empty($query->getQuery())) : ?>
                    <span>
                        <?php echo $this->translate('Your search: '); ?>
                        <?php echo $query->getQuery(); ?>
                    </span>
                <?php endif; ?>
            <?php echo $this->showQuery($query->getQueryFilters()) ?>
            </span>
        </div>
    <?php endif; ?>
    <div class="search-results-count">
        <?php echo $this->pagination(); ?>
    </div>
    <div class="search-results-sort">
        <form>
            <?php if ($sortOptions):
                $sortSelect = new Laminas\Form\Element\Select('sort');
                $sortSelect->setValueOptions($sortOptions);
                $sortSelect->setValue($query->getSort());
                $sortSelect->setLabel($this->translate('Sort by'));
            endif; ?>
            <?php if (!empty($sortSelect)): ?>
            <?php echo $this->formLabel($sortSelect); ?>
            <?php echo $this->formSelect($sortSelect); ?>
            <?php endif; ?>
        </form>
    </div>
    <div>
        <a class="search-view-type search-view-type-list" href="#">list</a>
        |
        <a class="search-view-type search-view-type-grid" href="#">grid</a>
    </div>
</div>
